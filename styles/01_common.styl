ul,li
	list-style-type none
a
	text-decoration none
	color black

*
	padding 0
	margin 0
	font-size 18px
	font-family "OpenSans-Light"
*:focus {
    outline: none;
}

textarea {

    background-color: transparent;
    resize: none;
    outline: none;
}

input[type="submit"]{
	border: none;
}
body
	background-color #f3f3f3
	min-width 300px
.section-title
	text-transform uppercase
	font-family "OpenSans-Semibold"
	font-size 27px
	text-align center
	margin-bottom 35px
	color #58667f

.section-subtitle
	font-family "OpenSansLight-Italic"
	line-height 27px
	font-size 18px
	color #58667f
	text-align center
	margin-bottom 60px
	padding 0 160px
	
.section-img
	display block 
	margin 55px auto
	
.container
	margin 0 auto
	position relative
	max-width 1200px
	
.container
		.do-slider-prev, .clients-slider-prev
			position absolute
			bottom 145px
			left 0
			font-size 48px
			line-height 27px
			color #58667f
			opacity 0.2
			cursor pointer
		.do-slider-next, .clients-slider-next
			position absolute
			bottom 145px
			right 0
			font-size 48px
			line-height 27px
			color #58667f
			opacity 0.2
			cursor pointer
